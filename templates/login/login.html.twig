{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}
{% block title %}
Page de connexion
{% endblock %}
{% block body %}
<h1 class="text-center text-7xl">Connectez-vous</h1>
  <form action="{{ path('login') }}"
        class="flex flex-col justify-start border shadow-xl rounded-md h-80 mx-auto mt-8 p-8"
        style="width: 39rem;"
        method="post">

        <div class="pb-5">
            <label for="username" class="form-label mt-4">Adresse email</label>
            <input type="email"
                class="placeholder:italic placeholder:text-slate-400 pl-4 block bg-white w-full border border-slate-300 rounded-full py-2 9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                id="email" name="email" placeholder="exemple@mail.com">
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Password</label>
            <input type="password"
                class="placeholder:italic placeholder:text-slate-400 pl-4 block bg-white w-full border border-slate-300 rounded-full py-2 9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                id="password" name="password" placeholder="*************">
        </div>

        <button class="border bg-red-500 text-white rounded-full m-4 p-2"type="submit">Connectez-vous</button>
        <a href="{{path('register')}}">Cr√©er un compte</a>
    </form>
{% endblock %}