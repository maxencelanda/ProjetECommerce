{% extends 'base.html.twig' %}

{# ... #}
{% block title %}
Page d'inscription
{% endblock %}
{% block body %}
<h1 class="text-center text-7xl">Inscrivez vous <br> Maintenant</h1>
  <form action="{{ path('login') }}"
        class="flex flex-col justify-start border shadow-xl rounded-md h-80 mx-auto mt-8 p-8"
        style="width: 39rem;"
        method="post">

       <div class="flex flex-row gap-4">
        <div class="pb-5 basis-1/2">
            <label for="name" class="form-label mt-4">Nom</label>
            <input type="name"
                class="placeholder:italic placeholder:text-slate-400 pl-4 block bg-white w-full border border-slate-300 rounded-full py-2 9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                id="name" name="name" placeholder="Entrez votre nom">
        </div>
         <div class="pb-5 basis-1/2">
            <label for="email" class="form-label mt-4">Adresse email</label>
            <input type="email"
                class="placeholder:italic placeholder:text-slate-400 pl-4 block bg-white w-full border border-slate-300 rounded-full py-2 9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                id="email" name="email" placeholder="exemple@mail.com">
        </div>
       </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de passe</label>
            <input type="password"
                class="placeholder:italic placeholder:text-slate-400 pl-4 block bg-white w-full border border-slate-300 rounded-full py-2 9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                id="password" name="password" placeholder="*************">
        </div>
        <div class="form-group">
            <label for="check_password" class="form-label mt-4">RÃ©petez le mot de passe</label>
            <input type="password"
                class="placeholder:italic placeholder:text-slate-400 pl-4 block bg-white w-full border border-slate-300 rounded-full py-2 9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                id="check_password" name="check_password" placeholder="*************">
        </div>

        <button class="border bg-red-500 text-white rounded-full m-4 p-2"type="submit">Connectez-vous</button>
    </form>
{% endblock %}