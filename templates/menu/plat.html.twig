{% extends 'base.html.twig' %}

{% block title %}ACME - Menu{% endblock %}
{% block javascripts %}
{{ parent() }}

<script>
    function displayHide(div){
        const productContainer = document.getElementById("productContainer");
        const div1 = document.getElementsByClassName("d"+div);
        for (let d of productContainer.children){
            if (d.style.display != "none"){
                d.style.display = "none";
            }
        }
        for (let d of div1){
            d.style.display = "block";
        }
    }
</script>

{% endblock %}

{% block body %}
<h1 class="text-center text-6xl mt-10">{{ product.name }}</h1>
<a href="{{ path('app_menu') }}" class="flex justify-center rounded-3xl text-red-800 border-solid border-2 border-red-800 font-medium bg-white w-40 h-12 ml-10 mt-10 leading-[2.75rem]">Retour</a>
<div class="flex space-x-6 w-3/4 mx-auto mt-10 text-center border-solid border-2 shadow-lg">
    <img src="{{ product.image }}" class="w-1/3"/>
    <div class="w-1/3 my-5 border-solid border-r-2 border-red-800 px-5">
        <p>{{ product.description }}</p>
    </div>
    <div class="w-1/3">
        <p class="font-bold my-5">{{product.price}}â‚¬</p>
        <form method="post" action="">
            <label for="quantite">Quantite: </label>
            <input type="number" value='1' class="w-10" name="quantite" id="quantite"></input>
            <button type="submit" class="cursor-pointer font-medium rounded-3xl text-red-800 font-medium border-solid border-red-800 border-2 leading-[2.75rem] hover:text-white hover:bg-red-800">Ajouter au panier</button>
        </form>
    </div>
</div>

{% endblock %}
